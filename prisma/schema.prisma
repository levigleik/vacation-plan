generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  photo     String?
  password  String
  groups    Group[]
  vacations Vacation[]
  comments  Comment[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt()
}

model Group {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt()
}

model Vacation {
  id          Int       @id @default(autoincrement())
  startDate   DateTime
  endDate     DateTime
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt()
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  vacation   Vacation @relation(fields: [vacationId], references: [id])
  vacationId Int
  createdAt  DateTime @default(now())
  updateAt   DateTime @updatedAt()
}
