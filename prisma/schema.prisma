generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  photo     String?
  password  String
  groups    Group[]
  vacations Vacation[]
  comments  Comment[]
}

model Group {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Vacation {
  id          Int            @id @default(autoincrement())
  startDate   DateTime
  endDate     DateTime
  user        User           @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String
  comments    Comment[]
  reason      ReasonVacation @relation(fields: [reasonId], references: [id])
  reasonId    Int
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  vacation   Vacation @relation(fields: [vacationId], references: [id])
  vacationId Int
}

model ReasonVacation {
  id        Int        @id @default(autoincrement())
  name      String
  vacations Vacation[]
}
