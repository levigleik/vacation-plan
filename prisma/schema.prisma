generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  photo     String?
  password  String
  vacations Vacation[]
  createdAt DateTime   @default(now())
  updateAt  DateTime   @updatedAt()
}

model Vacation {
  id          Int      @id @default(autoincrement())
  startDate   DateTime
  endDate     DateTime
  users       User[]
  title       String
  description String
  location    String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt()
}
